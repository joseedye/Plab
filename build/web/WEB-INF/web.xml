        <servlet-name>DeleteActivity</servlet-name>
        <url-pattern>/DeleteActivity.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProfesor</servlet-name>
        <url-pattern>/DeleteProfesor.do</url-pattern>
    </servlet-mapping>
