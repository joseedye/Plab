        <servlet-class>Controlador.QueryActivity</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PassRecovery</servlet-name>
        <servlet-class>Controlador.PassRecovery</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PassChange</servlet-name>
        <servlet-class>Controlador.PassChange</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePassword</servlet-name>
        <servlet-class>Controlador.UpdatePassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignIn</servlet-name>
        <servlet-class>Controlador.SignIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOut</servlet-name>
        <servlet-class>Controlador.LogOut</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterOtras</servlet-name>
        <servlet-class>Controlador.RegisterOtras</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterAdministracion</servlet-name>
